<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sensors.DevOptionsActivity">

    <Button
        android:id="@+id/buttonAccel"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="115dp"
        android:layout_marginBottom="20dp"
        android:text="Accel"
        app:layout_constraintBottom_toTopOf="@+id/buttonGPS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="284dp"
        android:text="GPS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonAccel"
        app:layout_constraintTop_toBottomOf="@+id/buttonAccel" />
</android.support.constraint.ConstraintLayout>